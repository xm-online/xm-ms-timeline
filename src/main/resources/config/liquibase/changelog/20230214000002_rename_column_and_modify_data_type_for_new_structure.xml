<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="20230214000002" author="fpyshnyi" dbms="postgresql, h2">
        <renameColumn tableName="xmtimeline"
                      oldColumnName="entity_id"
                      newColumnName="aggregate_id"/>
        <modifyDataType tableName="xmtimeline"
                        columnName="aggregate_id"
                        newDataType="varchar(255)"/>
    </changeSet>

    <changeSet id="20230214000002" author="fpyshnyi" dbms="oracle">
        <addColumn tableName="xmtimeline">
            <column name="aggregate_id" type="varchar(255)"/>
        </addColumn>
        <update tableName="xmtimeline">
            <column name="aggregate_id" valueComputed="to_char(entity_id)"/>
        </update>
        <dropColumn tableName="xmtimeline">
            <column name="entity_id"/>
        </dropColumn>
        <createIndex tableName="xmtimeline" indexName="idx_entity_id">
            <column name="aggregate_id" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
